{
  "name": "nodejs-snippets",
  "displayName": "Node.js Snippets & Tools",
  "description": "Node.js snippets and commands to scaffold backend projects",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:nodejsSnippets.createApiStructure"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nodejsSnippets.createApiStructure",
        "title": "Create Node.js API Structure"
      }
    ],
    "keybindings": [
      {
        "command": "nodejsSnippets.createApiStructure",
        "key": "ctrl+alt+n",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/mongoose.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/middleware.code-snippets"
      },
      {
        "language": "javascript",
        "path": "./snippets/routes.code-snippets"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "typescript": "^5.9.3"
  }
}
